{
  "manifest_version": 3,
  "name": "Torah Linker",
  "version": "1.0.1",
  "description": "Add links to sefaria for any Torah reference on the page.",
  "web_accessible_resources": [
    {
      "resources": ["js/linker.v3.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sefaria_linker.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}